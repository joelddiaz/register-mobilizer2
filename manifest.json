{

  "description": "Rewrites *.theregister.co.uk to m.theregister.co.uk",
  "manifest_version": 2,
  "name": "register-mobilizer2",
  "version": "0.1",
  "homepage_url": "https://github.com/joelddiaz/register-mobilizer2",
  "icons": {
    "48": "icons/elreg-48.png"
  },

  "applications": {
    "gecko": {
      "id": "register-mobilizer2@github.com",
      "strict_min_version": "48.0"
    }
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "http://theregister.co.uk/*" 
  ],
  
  "background": {
    "scripts": ["background.js"]
  }

}
